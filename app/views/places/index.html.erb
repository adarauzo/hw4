<h1>Places</h1>

<div class="row">
  <% for place in @places %>
    <div class="col-md-4 mb-3"> 
      <div class="card"> 
        <div class="card-body">
          <h5 class="card-title"><%= place["name"] %></h5>
          <a href="/places/<%= place["id"] %>" class="btn btn-primary">View Entries</a>
        </div>
      </div>
    </div>
  <% end %>
</div>

<p>
  <a href="/places/new" class="btn btn-primary">New place</a> 
</p>